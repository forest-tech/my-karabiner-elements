{
    "title": "Emacsキーバインド関係の自分の環境設定",
    "rules": [
        {
            "description": "Emacs風キーバインド: スペースバーを左Ctrlキーとして動作させる（単独押下時はスペース）",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: 左CtrlキーをEscキーとして動作させる（単独押下時）",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: Ctrl+y を Command+v に、Ctrl+w を Command+c に変換",
            "manipulators": [
                {
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "v",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "c",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: Ctrl+i を Tab に変換",
            "manipulators": [
                {
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "tab"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: Ctrl+m を Enter に変換",
            "manipulators": [
                {
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: 方向入力を矢印キーに変換",
            "manipulators": [
                {
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Emacs風キーバインド: Ctrl+a/e をそれぞれ Home/End に変換",
            "manipulators": [
                {
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "home"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "e",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option",
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "end"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}